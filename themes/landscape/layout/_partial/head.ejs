<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%
  var title = page.title;

  if (is_archive()){
    title = 'Archives';

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = 'Category: ' + page.category;
  } else if (is_tag()){
    title = 'Tag: ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%- open_graph({twitter_id: theme.twitter, google_plus: theme.google_plus, fb_admins: theme.fb_admins, fb_app_id: theme.fb_app_id}) %>
  <% if (theme.rss){ %>
    <link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>
  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>
  <link href="//fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet" type="text/css">
  <!-- e-shop style -->
  <%- css('css/shop/main.css') %>
  <%- css('css/shop/bootstrap.min.css') %>
  <%- css('css/shop/font-awesome.min.css') %>
  <%- css('css/shop/prettyPhoto.css') %>
  <%- css('css/shop/price-range.css') %>
  <%- css('css/shop/animate.css') %>
  <%- css('css/shop/main.css') %>
  <%- css('css/shop/responsive.css') %>

  <%- js('js/shop/jquery.js') %>
  <%- js('js/shop/bootstrap.min.js') %>
  <%- js('js/shop/jquery.scrollUp.min.js') %>
  <%- js('js/shop/price-range.js') %>
  <%- js('js/shop/jquery.prettyPhoto.js') %>
  <%- js('js/shop/main.js') %>
  
  <%- partial('google-analytics') %>
</head>